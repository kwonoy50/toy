<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board.BoardRepository">


<!--<select id="selectMessages" resultType="com.rooine.gardener.common.message.domain.Message">-->
<select id="selectBoards" resultType="java.util.HashMap">
<![CDATA[
SELECT
        bno
       ,title
       ,content
       ,writer
  FROM
        _G_BOARD
 WHERE  1 = 1
]]>
</select>


<!--<select id="selectMessage" parameterType="com.rooine.gardener.common.message.domain.Message" resultType="com.rooine.gardener.common.message.domain.Message">-->
<select id="selectBoard" parameterType="java.util.HashMap" resultType="java.util.HashMap">
<![CDATA[
SELECT
        bno
       ,title
       ,content
       ,writer
  FROM
        _G_BOARD
 WHERE  1 = 1
   AND  bno = #{bno}
   AND  title = #{title}
   AND  content = #{content}
   AND  writer = #{writer}
]]>
</select>

</mapper>
